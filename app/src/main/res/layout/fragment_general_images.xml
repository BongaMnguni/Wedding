<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texture"
    android:padding="20dp"
    tools:context="com.payghost.wedding.Gallery.GeneralImageUpload">

    <LinearLayout
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_shape"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/general_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:textColor="@color/colorPrimary"
            android:text="Upload"
            android:textStyle="bold" />

        <LinearLayout
            android:background="@drawable/container_button_shape"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/img_select_photo"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icons8touch"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
