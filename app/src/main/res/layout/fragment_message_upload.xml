<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texture"
    android:padding="16dp"
    tools:context=".Admin.AdminDashboardActivity">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:padding="25dp"
        android:background="@drawable/background_shape"
        android:id="@+id/messageLayout"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputtextsubject"
            android:layout_width="match_parent"
            android:hint="Subject"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/notsubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/inputtextsubject"
            android:hint="type message..."
            android:id="@+id/inputtextmessage"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/notmessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:id="@+id/notbtncont"
            android:layout_below="@+id/inputtextmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Message"/>


    </LinearLayout>

</RelativeLayout>

