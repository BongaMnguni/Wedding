<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:background="@drawable/texture"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
        <RelativeLayout
            android:padding="10dp"
            android:background="@drawable/background_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/regusernameLayout"
                    android:layout_width="match_parent"
                    android:hint="Username"
                    android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/regusername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_below="@+id/regusernameLayout"
                    android:id="@+id/regnameLayout"
                    android:layout_width="match_parent"
                    android:hint="Name"
                    android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/regname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_below="@+id/regnameLayout"
                    android:id="@+id/regsurnLayout"
                    android:layout_width="match_parent"
                    android:hint="Surname"
                    android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/regsurn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>


                        <EditText
                            android:layout_below="@+id/regsurnLayout"
                            android:hint="D.O.B"
                            android:id="@+id/regdob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                <android.support.design.widget.TextInputLayout
                    android:layout_below="@+id/regdob"
                    android:id="@+id/regPassLayout"
                    android:layout_width="match_parent"
                    android:hint="Password"
                    android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/regPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_below="@+id/regPassLayout"
                    android:id="@+id/regConfpassLayout"
                    android:layout_width="match_parent"
                    android:hint="Confirm Password"
                    android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/regConfpass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_marginBottom="7dp"
                    android:layout_below="@+id/regConfpassLayout"
                    android:background="@drawable/button_shape"
                    android:id="@+id/btnreg"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"/>

        </RelativeLayout>



</ScrollView>
